package array;

public class ArrayGugudan {
	public static void main(String[] args) {
		int dan = 3;
		
		for(int i=1; i<10; i++) {
			System.out.println(dan + "x" + i +"=" +(dan*i));
		}
		
		System.out.println("========================================");
		
		//배열을 이용하여 구구단 저장 및 출력
		int[] gugudan = new int[9];
		gugudan[0] = dan * 1;
		
		for(int i=1; i<gugudan.length+1; i++) {
			System.out.println(dan+"x"+i+"="+gugudan[0]*i);
		}
	}
}

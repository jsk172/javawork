package array;

public class ArrayGugudan {
	public static void main(String[] args) {
		int dan = 3;
		
		for(int i=1; i<10; i++) {
			System.out.println(dan + "x" + i +"=" +(dan*i));
		}
		
		System.out.println("========================================");
		
		//배열을 이용하여 구구단 저장 및 출력
		int[] gugudan = new int[9];
		
		for(int i = 0; i<gugudan.length; i++) {
			//배열 요소를 저장
			gugudan[i] = dan*(i+1);
		}
		
		for(int i = 0; i<gugudan.length; i++) {
			//배열 요소 출력
			System.out.println(dan+"x"+(i+1)+"="+dan*(i+1));
		}
		
	}
}
